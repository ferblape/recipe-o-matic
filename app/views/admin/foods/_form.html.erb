<%= flush_the_flash %>

<%= form_for([:admin, @food], html: {class: "pure-form-stacked pure-form"}) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, class: "pure-input-2-3" %>

  <%= f.label :plural_name %>
  <%= f.text_field :plural_name, class: "pure-input-2-3" %>

  <%= f.label :skip_from_lists %>
  <%= f.check_box :skip_from_lists %>

  <br><br>
  <%= f.button (@food.new_record? ? t('.create') : t('.update')), class: "pure-button pure-button-primary pure-button-xlarge" %>
  <%= link_to t('.cancel'), admin_foods_path %>
<% end %>
