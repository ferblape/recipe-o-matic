<div class="recipe-entry">
  <% if recipe.image.thumb.url.present? %>
    <%= link_to(image_tag(recipe.image.thumb.url, alt: recipe.name, height: 250, width: 650), recipe_path(recipe), title: recipe.name) %>
  <% else %>
    <%= link_to(image_tag("images/default.png", alt: recipe.name, height: 250, width: 650), recipe_path(recipe), title: recipe.name) %>
  <% end %>

  <%= render 'metadata', recipe: recipe %>

  <h3><%= link_to(recipe.name, recipe_path(recipe), title: recipe.name) %></h3>
</div>
