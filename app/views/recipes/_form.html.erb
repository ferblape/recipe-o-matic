<%= flush_the_flash %>

<%= form_for(@recipe, html: {class: "pure-form-stacked pure-form"}) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, class: "pure-input-1", "data-behaviour" => 'focus' %>

  <%= f.label :original_url %>
  <%= f.text_field :original_url, value: (f.object.original_url || params[:original_url]), class: "pure-input-1" %>

  <%= f.label :remote_image_url %>
  <%= f.text_field :remote_image_url, value: nil, class: "pure-input-1", placeholder: t('.image_placeholder') %>

  <%= f.label :text %>
  <%= f.text_area :text, class: "pure-input-1", rows: 15, placeholder: t('.instructions') %>

  <%= f.label :ingredients_text %>
  <%= f.text_area :ingredients_text, class: "pure-input-1", rows: (@recipe.ingredients.empty? ? 8 : @recipe.ingredients.size + 2), placeholder: t('.ingredients') %>

  <br>
  <%= f.button (@recipe.new_record? ? t('.create') : t('.update')), class: "pure-button pure-button-primary pure-button-xlarge" %>
  <%= link_to t('.cancel'), recipes_path %>
<% end %>
